@model System.Security.Claims.ClaimsPrincipal
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-condensed">
            <caption>Claims</caption>
            <thead>
                <tr>
                    <th>Claim</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>