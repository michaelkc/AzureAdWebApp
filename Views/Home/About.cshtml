@using System.IdentityModel.Tokens.Jwt
@model UserViewModel
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-12">
        @{
        }

        <table class="table table-bordered table-condensed">
            <caption>Claims</caption>
            <thead>
                <tr>
                    <th>Claim</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model.User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            <tr><td colspan="2">Raw claims from id_token</td></tr>
                @foreach (var claim in Model.Payload)
                {
                    <tr>
                        <td>@claim.Key</td>
                        <td>@claim.Value</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>